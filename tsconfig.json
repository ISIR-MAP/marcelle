{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "rootDir": "."
  },
  "files": [
    "vue-shims.d.ts"
  ],
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ]
}
