{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "types": ["node", "svelte"],
    "rootDir": "."
  },
  "include": [
    "packages/*/src/",
  ],
  "exclude": [
    "node_modules"
  ]
}
